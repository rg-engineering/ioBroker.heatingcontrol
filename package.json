    "baseline-browser-mapping": "^2.9.11"
  },
  "main": "main.js",
  "bugs": {
    "url": "https://github.com/rg-engineering/ioBroker.heatingcontrol"
  },
  "scripts": {
    "test": "npm run test:package",
    "test:package": "mocha test/package --exit",
    "test:unit": "mocha test/unit --exit",
    "test:integration": "mocha test/integration --exit",
    "lint": "eslint -c eslint.config.mjs .",
    "translate": "translate-adapter",
    "release": "release-script",
    "build-backend": "tsc -p tsconfig.build.json",
    "release-patch": "release-script patch --yes",
    "release-minor": "release-script minor --yes",
    "release-major": "release-script major --yes",
    "build": "node tasks && npm pack",
    "update-packages": "npx -y npm-check-updates --upgrade && cd src-admin && npx -y npm-check-updates --upgrade",
    "npm": "npm i && cd src-admin && npm i -f",
    "0-clean": "node tasks.js --0-clean",
    "1-npm": "node tasks.js --1-npm",
    "2-build": "node tasks.js --2-build",
    "3-copy": "node tasks.js --3-copy",
    "4-patch": "node tasks.js --4-patch"
  },
  "files": [
    "admin/",
    "admin{,/!(i18n)/**}/flat.txt",
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).{json,json5}",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "admin/build/",
    "!doc/",
    "lib/",
    "!.vscode",
    "!.github",
    "!.git",
    "!.gitignore",
    "!.gitattributes",
    "!node_modules",
    "!tasks",
    "!.idea",
    "!test",
    "!typings",
    "!www/",
    "io-package.json",
    "LICENSE",
    "main.js"
  ],
  "readmeFilename": "README.md"
